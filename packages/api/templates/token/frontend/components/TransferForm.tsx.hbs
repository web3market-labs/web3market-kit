'use client'

import { useState, useEffect } from 'react'
import { useToken } from '@/hooks/useToken'

interface TransferFormProps {
  contractAddress: `0x${string}`
}

export function TransferForm({ contractAddress }: TransferFormProps) {
  const [to, setTo] = useState('')
  const [amount, setAmount] = useState('')

  const {
    formattedBalance,
    symbol,
    transfer,
    isTransferPending,
    isTransferConfirming,
    isTransferConfirmed,
    transferHash,
    resetTransfer,
  } = useToken(contractAddress)

  const isValidAddress = /^0x[a-fA-F0-9]{40}$/.test(to)
  const isValidAmount = amount !== '' && Number(amount) > 0
  const exceedsBalance = Number(amount) > Number(formattedBalance)
  const canSubmit = isValidAddress && isValidAmount && !exceedsBalance && !isTransferPending && !isTransferConfirming

  useEffect(() => {
    if (isTransferConfirmed) {
      setTo('')
      setAmount('')
      const timer = setTimeout(() => resetTransfer(), 5000)
      return () => clearTimeout(timer)
    }
  }, [isTransferConfirmed, resetTransfer])

  function handleSubmit(e: React.FormEvent) {
    e.preventDefault()
    if (!canSubmit) return
    transfer(to as `0x${string}`, amount)
  }

  return (
    <div className="rounded-lg border border-border bg-card p-6 text-card-foreground">
      <h3 className="text-lg font-semibold">Transfer Tokens</h3>
      <p className="text-sm text-muted-foreground mt-1">
        Send {symbol ?? '...'} to another address
      </p>

      <form onSubmit={handleSubmit} className="mt-4 space-y-4">
        <div className="space-y-2">
          <label htmlFor="transfer-to" className="text-sm font-medium">
            Recipient Address
          </label>
          <input
            id="transfer-to"
            type="text"
            placeholder="0x..."
            value={to}
            onChange={(e) => setTo(e.target.value)}
            className="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
          />
          {to && !isValidAddress && (
            <p className="text-sm text-destructive">Enter a valid Ethereum address</p>
          )}
        </div>

        <div className="space-y-2">
          <div className="flex items-center justify-between">
            <label htmlFor="transfer-amount" className="text-sm font-medium">
              Amount
            </label>
            <button
              type="button"
              onClick={() => setAmount(formattedBalance)}
              className="text-xs text-muted-foreground hover:text-foreground"
            >
              Balance: {formattedBalance} {symbol ?? ''}
            </button>
          </div>
          <input
            id="transfer-amount"
            type="number"
            step="any"
            min="0"
            placeholder="0.00"
            value={amount}
            onChange={(e) => setAmount(e.target.value)}
            className="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
          />
          {exceedsBalance && (
            <p className="text-sm text-destructive">Amount exceeds your balance</p>
          )}
        </div>

        <button
          type="submit"
          disabled={!canSubmit}
          className="inline-flex w-full items-center justify-center rounded-md text-sm font-medium h-10 px-4 py-2 bg-primary text-primary-foreground hover:bg-primary/90 disabled:pointer-events-none disabled:opacity-50"
        >
          {isTransferPending
            ? 'Confirm in Wallet...'
            : isTransferConfirming
              ? 'Confirming...'
              : 'Transfer'}
        </button>
      </form>

      {isTransferConfirmed && transferHash && (
        <div className="mt-4 rounded-md border border-green-200 bg-green-50 p-3 text-sm text-green-800 dark:border-green-800 dark:bg-green-950 dark:text-green-200">
          Transfer confirmed!{' '}
          <span className="font-mono text-xs break-all">{transferHash}</span>
        </div>
      )}
    </div>
  )
}
