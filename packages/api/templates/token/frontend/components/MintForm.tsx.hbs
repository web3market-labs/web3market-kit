{{#if mintable}}
'use client'

import { useState, useEffect } from 'react'
import { useToken } from '@/hooks/useToken'

interface MintFormProps {
  contractAddress: `0x${string}`
}

export function MintForm({ contractAddress }: MintFormProps) {
  const [to, setTo] = useState('')
  const [amount, setAmount] = useState('')

  const {
    symbol,
    isOwner,
    mint,
    isMintPending,
    isMintConfirming,
    isMintConfirmed,
    mintHash,
    resetMint,
  } = useToken(contractAddress)

  const isValidAddress = /^0x[a-fA-F0-9]{40}$/.test(to)
  const isValidAmount = amount !== '' && Number(amount) > 0
  const canSubmit = isOwner && isValidAddress && isValidAmount && !isMintPending && !isMintConfirming

  useEffect(() => {
    if (isMintConfirmed) {
      setTo('')
      setAmount('')
      const timer = setTimeout(() => resetMint(), 5000)
      return () => clearTimeout(timer)
    }
  }, [isMintConfirmed, resetMint])

  function handleSubmit(e: React.FormEvent) {
    e.preventDefault()
    if (!canSubmit) return
    mint(to as `0x${string}`, amount)
  }

  if (!isOwner) {
    return (
      <div className="rounded-lg border border-border bg-card p-6 text-card-foreground">
        <h3 className="text-lg font-semibold">Mint Tokens</h3>
        <p className="mt-2 text-sm text-muted-foreground">
          Only the contract owner can mint new tokens.
        </p>
      </div>
    )
  }

  return (
    <div className="rounded-lg border border-border bg-card p-6 text-card-foreground">
      <h3 className="text-lg font-semibold">Mint Tokens</h3>
      <p className="text-sm text-muted-foreground mt-1">
        Create new {symbol ?? '...'} tokens (owner only)
      </p>

      <form onSubmit={handleSubmit} className="mt-4 space-y-4">
        <div className="space-y-2">
          <label htmlFor="mint-to" className="text-sm font-medium">
            Recipient Address
          </label>
          <input
            id="mint-to"
            type="text"
            placeholder="0x..."
            value={to}
            onChange={(e) => setTo(e.target.value)}
            className="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
          />
          {to && !isValidAddress && (
            <p className="text-sm text-destructive">Enter a valid Ethereum address</p>
          )}
        </div>

        <div className="space-y-2">
          <label htmlFor="mint-amount" className="text-sm font-medium">
            Amount to Mint
          </label>
          <input
            id="mint-amount"
            type="number"
            step="any"
            min="0"
            placeholder="0.00"
            value={amount}
            onChange={(e) => setAmount(e.target.value)}
            className="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
          />
        </div>

        <button
          type="submit"
          disabled={!canSubmit}
          className="inline-flex w-full items-center justify-center rounded-md text-sm font-medium h-10 px-4 py-2 bg-primary text-primary-foreground hover:bg-primary/90 disabled:pointer-events-none disabled:opacity-50"
        >
          {isMintPending
            ? 'Confirm in Wallet...'
            : isMintConfirming
              ? 'Confirming...'
              : 'Mint Tokens'}
        </button>
      </form>

      {isMintConfirmed && mintHash && (
        <div className="mt-4 rounded-md border border-green-200 bg-green-50 p-3 text-sm text-green-800 dark:border-green-800 dark:bg-green-950 dark:text-green-200">
          Mint confirmed!{' '}
          <span className="font-mono text-xs break-all">{mintHash}</span>
        </div>
      )}
    </div>
  )
}
{{/if}}
