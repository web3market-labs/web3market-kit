{
  "id": "token-reflection",
  "slug": "erc20-reflection",
  "displayName": "Reflection Token",
  "description": "Holders earn passive rewards from every transaction via the reflected supply pattern. Configurable reflection fee with anti-whale limits.",
  "version": "1.0.0",
  "tier": "free",
  "category": "token",
  "parameters": [
    { "name": "tokenName", "prompt": "Token name", "type": "string", "default": "Reflect Token", "required": true },
    { "name": "tokenSymbol", "prompt": "Token symbol", "type": "string", "default": "RFL", "required": true },
    { "name": "totalSupply", "prompt": "Total supply (in tokens)", "type": "string", "default": "1000000000", "required": true },
    { "name": "reflectionPercent", "prompt": "Reflection fee (%)", "type": "string", "default": "3", "required": true },
    { "name": "maxTxPercent", "prompt": "Max transaction (% of supply)", "type": "string", "default": "1", "required": true },
    { "name": "maxWalletPercent", "prompt": "Max wallet (% of supply)", "type": "string", "default": "2", "required": true }
  ],
  "files": {
    "contracts": [
      { "template": "token/contracts/ReflectionToken.sol.hbs", "output": "contracts/src/{{tokenSymbol}}Token.sol" },
      { "template": "token/contracts/ReflectionToken.t.sol.hbs", "output": "contracts/test/{{tokenSymbol}}Token.t.sol" },
      { "template": "token/contracts/DeployReflectionToken.s.sol.hbs", "output": "contracts/script/Deploy{{tokenSymbol}}Token.s.sol" }
    ],
    "frontend": [
      { "template": "token/frontend/hooks/useToken.ts.hbs", "output": "web/hooks/useToken.ts" },
      { "template": "token/frontend/components/TokenDashboard.tsx.hbs", "output": "web/components/TokenDashboard.tsx" },
      { "template": "token/frontend/components/MintForm.tsx.hbs", "output": "web/components/MintForm.tsx" },
      { "template": "token/frontend/components/TransferForm.tsx.hbs", "output": "web/components/TransferForm.tsx" },
      { "template": "token/frontend/components/TokenStats.tsx.hbs", "output": "web/components/TokenStats.tsx" },
      { "template": "token/frontend/app/page.tsx.hbs", "output": "web/app/page.tsx" }
    ],
    "shared": [
      "_shared/root",
      "_shared/contracts",
      "_shared/frontend"
    ]
  },
  "solidityDependencies": [
    "OpenZeppelin/openzeppelin-contracts",
    "foundry-rs/forge-std"
  ]
}
