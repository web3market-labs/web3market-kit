  },
  "dependencies": {
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "handlebars": "^4.7.8"
  },
  "optionalDependencies": {
    "@web3market/sdk": "workspace:*"
  },
  "devDependencies": {
    "@web3market/tsconfig": "workspace:*",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
